        <script>
            $(document).ready(function () {
                $('.word-button').click(function() {

                  var word = $(this).data('param1');

                    $.ajax({
                        url: '/<%= language %>/GET-WORDS/' + word,
                        method: 'GET',
                        success: function (data) {
                            const wordlist = $('#wordList');
                            const paginationControls = $('#paginationControls');
                            wordlist.empty();
                            paginationControls.empty();
                            if (data.letterWords.length > 0) {
                                data.letterWords.forEach(word => {
                                    const listItem = $('<div class="col-lg-2 col-md-2 col-sm-3 col-6">').html('<a href="/<%= language %>/english-to-<%= language %>-meaning-'+ word + '" rel="dofollow"><p style="color:white;">' + word + '</p></a>');

                                    wordlist.append(listItem);
                                });
                            } else {
                                wordlist.append('<h6 style="color:white;"><b>No words found</b></h6>');
                            }
                            updateWordPaginationControls(data.tPages, data.cPage , word);
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                });
                function updateWordPaginationControls(totalPages, currentPage, word) {
                    const paginationControls = $('#paginationControls');
                    paginationControls.empty(); 

                    const maxVisiblePages = 6;
                    const halfMaxVisiblePages = Math.floor(maxVisiblePages / 2);

                    let startPage = Math.max(1, currentPage - halfMaxVisiblePages);
                    let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

                    if (endPage - startPage < maxVisiblePages - 1) {
                        startPage = Math.max(1, endPage - maxVisiblePages + 1);
                    }

                    paginationControls.append(`<nav aria-label="Page navigation example"><ul class="pagination pagination-sm justify-content-center"><li class="page-item"><button class="page-link"  onclick="getWordWise(1,'${word}')">First</button></li></ul></nav>`);
                    for (let i = startPage; i <= endPage; i++) {
                        const link = $(`<nav aria-label="Page navigation example"><ul class="pagination pagination-sm justify-content-center"><li class="page-item"><button class="page-link" onclick="getWordWise(${i},'${word}')">${i}</button></li></ul></nav>`);
                        if (i === currentPage) {
                            link.addClass('active'); 
                        }
                        paginationControls.append(link);
                    }
                    paginationControls.append(`<nav aria-label="Page navigation example"><ul class="pagination pagination-sm justify-content-center"><li class="page-item"><button class="page-link" onclick="getWordWise(${totalPages},'${word}')">Last</button></li></ul></nav>`);
                }      
            });
        </script>

