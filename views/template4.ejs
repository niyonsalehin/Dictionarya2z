        <script>
            $(document).ready(function () {
                const searchResultsContainer = $('#searchResultsContainer');
                $('.page-link').click(function() {

                  var word = $(this).data('param1');

                    $.ajax({
                        url: '/GET-WORDS/' + word,
                        method: 'GET',
                        success: function (data) {
                            // Update the search results on the page
                            const wordlist = $('#wordList');
                            const paginationlist = $('#paginationAjax');
                            wordlist.empty();
                            if (data.length > 0) {
                                data.forEach(word => {
                                    const listItem = $('<div class="col-lg-2 col-md-2 col-sm-3 col-6">').html('<p style="color:white;">' + word + '</p>');

                                    wordlist.append(listItem);
                                });
                            } else {
                                wordlist.append('<h6 style="color:white;"><b>No words found</b></h6>');
                            }
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                });
            });
        </script>

        <script>
            $(document).ready(function () {
                const searchResultsContainer = $('#searchResultsContainer');
                $('#word').on('input', function () {
                    const inputValue = $(this).val();
                    if (inputValue.length > 0) {
                        searchResultsContainer.show();
                    } else {
                        searchResultsContainer.hide();
                    }


                    $.ajax({
                        url: '/search/' + inputValue,
                        method: 'GET',
                        success: function (data) {
                            // Update the search results on the page
                            const similarWordsList = $('#similarWordsList');
                            similarWordsList.empty();
                            var language = window.location.pathname.split('/')[1];
                            if (data.length > 0) {
                                data.forEach(word => {
                                    const listItem = $('<li>').html('<a href="/' +
                                        language + '/english-to-' + language +
                                        '-meaning-' + encodeURIComponent(word) +
                                        '">' + word + '</a>');

                                    similarWordsList.append(listItem);
                                });
                            } else {
                                similarWordsList.append('<li>No words found</li>');
                            }
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                });
            });
        </script>

